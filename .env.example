# =============================================================================
# TodoListi - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USER=todolisti
DB_PASSWORD=todolisti_dev_password
DB_NAME=todolisti

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Google OAuth
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Sentry (Error Tracking) - Optional
# -----------------------------------------------------------------------------
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Docker Specific
# -----------------------------------------------------------------------------
DOCKER_REGISTRY=your-registry.azurecr.io
VERSION=latest

# -----------------------------------------------------------------------------
# pgAdmin (Development Only)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@todolisti.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
